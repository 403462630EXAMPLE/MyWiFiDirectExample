<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mynfc" >

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mynfc.MyActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mynfc.MyActivity2"
            android:label="@string/title_activity_my_activity2" >
        </activity>
        <activity
            android:name="com.mynfc.WiFiDrectActivity"
            android:label="@string/title_activity_wi_fi_drect" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mynfc.WiFiP2pDeviceDetialActivity"
            android:label="@string/title_activity_wi_fi_p2p_device_detial" >
        </activity>
    </application>

</manifest>
